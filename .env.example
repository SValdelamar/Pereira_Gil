# =====================================================================
# CONFIGURACIÓN DEL SISTEMA - Centro Minero SENA
# =====================================================================
# INSTRUCCIONES:
# 1. Copia este archivo a .env (sin el .example)
#    Windows: copy .env.example .env
#    Linux/Mac: cp .env.example .env
# 2. Edita .env con tus valores reales
# 3. NUNCA subas .env a Git (ya está en .gitignore)

# =====================================================================
# BASE DE DATOS MYSQL
# =====================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=laboratorios_db
DB_USER=root
DB_PASSWORD=tu_password_mysql_aqui

# Alias antiguos (para compatibilidad)
HOST=localhost
USUARIO_PRODUCCION=root
PASSWORD_PRODUCCION=tu_password_mysql_aqui
BASE_DATOS=laboratorios_db

# =====================================================================
# SEGURIDAD Y AUTENTICACIÓN
# =====================================================================
# Genera claves secretas únicas para producción
# Puedes usar: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=tu_clave_secreta_aqui_cambiar_en_produccion
JWT_SECRET_KEY=tu_jwt_secret_key_aqui_cambiar_en_produccion

# =====================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================================
FLASK_ENV=production
DEBUG=False
PORT=5000

# =====================================================================
# RUTAS DE MYSQL (Opcional - para backups)
# =====================================================================
# Windows
# MYSQLDUMP_PATH=C:\Program Files\MySQL\MySQL Server 8.0\bin\mysqldump.exe
# MYSQL_PATH=C:\Program Files\MySQL\MySQL Server 8.0\bin\mysql.exe

# Linux/Mac
# MYSQLDUMP_PATH=/usr/bin/mysqldump
# MYSQL_PATH=/usr/bin/mysql

# =====================================================================
# CONFIGURACIÓN DE CORREO (Opcional - para recuperación de contraseñas)
# =====================================================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_correo@gmail.com
# SMTP_PASSWORD=tu_password_aplicacion_gmail

# =====================================================================
# OPCIONES AVANZADAS
# =====================================================================
# Máximo tamaño de archivo de carga (en MB)
MAX_UPLOAD_SIZE=16

# Tiempo de sesión (en horas)
SESSION_LIFETIME=8

# Activar logs detallados
VERBOSE_LOGGING=False
